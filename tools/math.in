{{
    class MathSpan:
        def __init__(self, start, end):
            self.start = start
            self.end = end

        def __str__(self):
            return "%d--%d"%(self.start, self.end)

    def math_span(a, b):
        return MathSpan(a.start, b.end)

    def math_zero_loc(prev):
        loc = prev and prev.end or 0
        return MathSpan(loc, loc)
